<% layout('layouts/boilerplate') %>
    <div class="row">
        <div class="col-6 offset-3">
            <div class="alert alert-danger">
                <h1>
                    <%= title %>
                </h1>
                <p>Something went wrong.</p>
                <br>
                <p><b>Error Detail:</b></p>
                <% if (process.env.NODE_ENV !== "production"){ %>
                    <p>
                        <%= err.stack %>
                    </p>
                <% } %>
                <a href="/campgrounds">Back to Home</a>
            </div>
        </div>
    </div>