<% layout('/layouts/boilerplate') %>
    <div class="row">
        <h2 class="text-center">New Campground</h2>
        <div class="col-6 offset-3">
            <form class="mb-4 needs-validation" action="/campgrounds/<%= editCampground._id %>?_method=POST" method="post" method="post" novalidate>
                <div class="mb-2">
                    <label for="description" class="form-label">Your Review:</label>
                    <textarea class="form-control" rows="3" placeholder="description" name="campground[description]" id="description" required></textarea>
                </div>
                <button class="btn-success" type="submit">Save</button>
            </form>
            <a href="/campgrounds">Back to Home</a>
        </div>
    </div>